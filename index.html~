}

function enc(){  
getbg();
str="";
var str2=encode64(document.getElementById("en").value);
var i, len;  
    len = str2.length;  
    i = 0;  
   var out = "";  
    
len=str2.length;
out="";
while(i < len){
if(str2.charAt(i)=='='){
out+="等";
}else{
out+=bgh.charAt(base64EncodeChars.indexOf(str2.substr(i,1)));
}
i++;
}
document.getElementById("de").value=out;  
}  
function dec(){
getbg();
var str2=document.getElementById("de").value;
var len=str2.length;
var out="";
