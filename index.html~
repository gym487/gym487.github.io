<script  type="text/javascript">  
var base64EncodeChars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/";  
var bg ="乾坤震巽坎离艮兑"
var bgg="乾坤屯蒙需讼师比畜履泰否同有谦豫随蛊临观噬贲剥复妄畜颐大坎离咸恒遁壮晋明人睽蹇解损益夬姤萃升困井革鼎震艮渐妹丰旅巽兑涣节孚过既未" 
function enc(){  
str="";
var str2=encode64(document.getElementById("en").value);
var i, len;  
    len = str2.length;  
    i = 0;  
   var out = "";  
    
len=str2.length;
out="";
while(i < len){
if(str2.charAt(i)=='='){
out+="等";
}else{
out+=bgg.charAt(base64EncodeChars.indexOf(str2.substr(i,1)));
}
i++;
}
document.getElementById("de").value=out;  
}  
function dec(){
var str2=document.getElementById("de").value;
var len=str2.length;
var out="";
 i=0;
 while(i < len){
if(str2.substr(i,1)=="等"){
out+="=";
}else{
out+=base64EncodeChars.charAt(bgg.indexOf(str2.substr(i,1)));
}
i++;
}
document.getElementById("en").value=decode64(out);
}  
</script>  
